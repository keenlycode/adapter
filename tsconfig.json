{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "declaration": true,
        "declarationMap": true,
        "allowImportingTsExtensions": true,
        "rewriteRelativeImportExtensions": true,
        "outDir": "dist/browser/",
    },
    "include": ["src"],
    "exclude": ["src/**/*.bundle.ts"]
}
