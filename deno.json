{
  "name": "@devcapsule/adapter",
  "version": "3.1.0",
  "license": "ISC",
  "description": "Empowering Next-Generation UI Style with ES6 and WebComponent",
  "tasks": {
    "test:esbuild": "deno run --watch-hmr --allow-all ./esbuild/test.js",
    "test:html": "engrave server test-src/ docs/test/ --watch='.*.js'",
    "test": "deno task test:esbuild & deno task test:html",
    "dist:typescript": "npx tsc --project tsconfig.json",
    "dist:esbuild": "deno run --allow-all esbuild/dist.js",
    "dist": "deno task dist:typescript & deno task dist:esbuild",
    "guide:dev": "deno run -A npm:vitepress dev guide",
    "guide:build": "deno run -A npm:vitepress build guide",
    "guide:preview": "deno run -A npm:vitepress preview guide",
    "publish": "deno publish --allow-slow-types --allow-dirty"
  },
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "dom.asynciterable",
      "deno.ns",
      "deno.unstable"
    ]
  },
  "unstable": ["sloppy-imports"],
  "lint": {
    "rules": {
      "exclude": ["no-sloppy-imports"]
    }
  },
  "publish": {
    "include": [
      "src/",
      "dist/browser/",
      "README.md",
      "CHANGELOG.md",
      "LICENSE.md"
    ]
  },
  "exports": "./src/mod.ts",
  "imports": {
    "@devcapsule/adapter": "./src/mod.ts",
    "@std/fs": "jsr:@std/fs@^1.0.20",
    "@std/path": "jsr:@std/path@^1.1.3",
    "esbuild": "https://deno.land/x/esbuild@v0.27.0/mod.js"
  }
}
